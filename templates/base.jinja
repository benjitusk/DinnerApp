  <script type="text/javascript">
    function prettyDate(timestamp) {
      function pad(n, width, z) {
        z = z || '0';
        n = n + '';
        return n.length >= width ? n : new Array(width - n.length + 1).join(z) + n;
      }
      if (timestamp < 2000000000) // If it's less than 2Billion, it's seconds and
        timestamp *= 1000;      // needs to be converted to milliseconds
      let time = new Date(timestamp);
      let hours = time.getHours();
      let am = true;
      if (hours >= 13) {
        am = false;
        hours -= 12;
      }
      if (hours == 0) hours = 12;
      let minutes = time.getMinutes();
      return hours + ":" + pad(minutes, 2) + " " + (am ? "AM" : "PM");
    }
  </script>


